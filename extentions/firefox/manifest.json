{
    "manifest_version": 2,
    "name": "actvitiyGraph",
    "version": "1.0",

    "description": "tracks the working hours of the sites from the list",

    "icons": {
        "48": "icons/beasts-48.png"
    },

    "permissions": ["tabs", "storage"],

    "browser_action": {
        "default_icon": "icons/beasts-32-light.png",
        "default_title": "Beastify",
        "default_popup": "popup/set_mode.html"
    },

    "background": {
        "scripts": ["background_scripts/get_opened_tabs.js"],
        "persistent": true,
        "type": "module"
    }
}